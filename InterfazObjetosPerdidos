import java.awt.*;
import javax.swing.*;
import java.util.List;

 

    private JPanel crearPanelRegistrar() {
        JPanel panel = new JPanel(new GridBagLayout());
        GridBagConstraints gbc = new GridBagConstraints();
        gbc.gridwidth = GridBagConstraints.REMAINDER;
        gbc.fill = GridBagConstraints.HORIZONTAL;
        gbc.insets = new Insets(5, 5, 5, 5);

        JTextField nombreField = new JTextField(20);
        JTextField apellidoField = new JTextField(20);
        JTextField usuarioField = new JTextField(20);
        JPasswordField passwordField = new JPasswordField(20);

        panel.add(new JLabel("Nombre:"), gbc);
        panel.add(nombreField, gbc);
        panel.add(new JLabel("Apellido:"), gbc);
        panel.add(apellidoField, gbc);
        panel.add(new JLabel("Usuario:"), gbc);
        panel.add(usuarioField, gbc);
        panel.add(new JLabel("Contraseña:"), gbc);
        panel.add(passwordField, gbc);

        JButton registrarButton = new JButton("Registrar Usuario");
        registrarButton.addActionListener(e -> {
            String nombre = nombreField.getText();
            String apellido = apellidoField.getText();
            String usuario = usuarioField.getText();
            String password = new String(passwordField.getPassword());

            if (!nombre.isEmpty() && !apellido.isEmpty() && !usuario.isEmpty() && !password.isEmpty()) {
                Usuario nuevoUsuario = new Usuario(nombre, apellido, usuario, password);
                if (gestor.registrarUsuario(nuevoUsuario)) {
                    JOptionPane.showMessageDialog(this, "Usuario registrado con éxito.");
                    nombreField.setText("");
                    apellidoField.setText("");
                    usuarioField.setText("");
                    passwordField.setText("");
                } else {
                    JOptionPane.showMessageDialog(this, "El usuario ya existe.", "Error", JOptionPane.ERROR_MESSAGE);
                }
            } else {
                JOptionPane.showMessageDialog(this, "Por favor, complete todos los campos.", "Error", JOptionPane.ERROR_MESSAGE);
            }
        });

        panel.add(registrarButton, gbc);
        return panel;
    }

    private JPanel crearPanelIniciarSesion() {
        JPanel panel = new JPanel(new GridBagLayout());
        GridBagConstraints gbc = new GridBagConstraints();
        gbc.gridwidth = GridBagConstraints.REMAINDER;
        gbc.fill = GridBagConstraints.HORIZONTAL;
        gbc.insets = new Insets(5, 5, 5, 5);

        JTextField usuarioField = new JTextField(20);
        JPasswordField passwordField = new JPasswordField(20);

        panel.add(new JLabel("Usuario:"), gbc);
        panel.add(usuarioField, gbc);
        panel.add(new JLabel("Contraseña:"), gbc);
        panel.add(passwordField, gbc);

        JButton loginButton = new JButton("Iniciar Sesión");
        loginButton.addActionListener(e -> {
            String usuario = usuarioField.getText();
            String password = new String(passwordField.getPassword());

            if (!usuario.isEmpty() && !password.isEmpty()) {
                Usuario user = gestor.iniciarSesion(usuario, password);
                if (user != null) {
                    usuarioActual = user;
                    JOptionPane.showMessageDialog(this, "Sesión iniciada con éxito.");
                    usuarioField.setText("");
                    passwordField.setText("");
                } else {
                    JOptionPane.showMessageDialog(this, "Usuario o contraseña incorrectos.", "Error", JOptionPane.ERROR_MESSAGE);
                }
            } else {
                JOptionPane.showMessageDialog(this, "Por favor, complete todos los campos.", "Error", JOptionPane.ERROR_MESSAGE);
            }
        });

        panel.add(loginButton, gbc);
        return panel;
    }

    private JPanel crearPanelAgregarObjeto() {
        JPanel panel = new JPanel(new GridBagLayout());
        GridBagConstraints gbc = new GridBagConstraints();
        gbc.gridwidth = GridBagConstraints.REMAINDER;
        gbc.fill = GridBagConstraints.HORIZONTAL;
        gbc.insets = new Insets(5, 5, 5, 5);

        JTextField nombreField = new JTextField(20);
        JTextField descripcionField = new JTextField(20);
        JTextField lugarField = new JTextField(20);
        JTextField fechaField = new JTextField(20);

        panel.add(new JLabel("Nombre del objeto:"), gbc);
        panel.add(nombreField, gbc);
        panel.add(new JLabel("Descripción:"), gbc);
        panel.add(descripcionField, gbc);
        panel.add(new JLabel("Lugar encontrado:"), gbc);
        panel.add(lugarField, gbc);
        panel.add(new JLabel("Fecha encontrada (dd/mm/yyyy):"), gbc);
        panel.add(fechaField, gbc);

        JButton agregarButton = new JButton("Agregar Objeto");
        agregarButton.addActionListener(e -> {
            if (usuarioActual == null) {
                JOptionPane.showMessageDialog(this, "Debe iniciar sesión para agregar objetos.", "Error", JOptionPane.ERROR_MESSAGE);
                return;
            }

            String nombre = nombreField.getText();
            String descripcion = descripcionField.getText();
            String lugar = lugarField.getText();
            String fecha = fechaField.getText();

            if (!nombre.isEmpty() && !descripcion.isEmpty() && !lugar.isEmpty() && !fecha.isEmpty()) {
                Accesorio nuevoAccesorio = new Accesorio(nombre, descripcion, lugar, fecha);
                gestor.agregarObjeto(nuevoAccesorio);
                JOptionPane.showMessageDialog(this, "Objeto agregado con éxito.");
                nombreField.setText("");
                descripcionField.setText("");
                lugarField.setText("");
                fechaField.setText("");
            } else {
                JOptionPane.showMessageDialog(this, "Por favor, complete todos los campos.", "Error", JOptionPane.ERROR_MESSAGE);
            }
        });

        panel.add(agregarButton, gbc);
        return panel;
    }

